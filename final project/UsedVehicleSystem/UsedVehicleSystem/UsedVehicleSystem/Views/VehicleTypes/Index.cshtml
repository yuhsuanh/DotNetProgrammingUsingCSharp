@model IEnumerable<UsedVehicleSystem.Models.VehicleType>

@{
    ViewBag.Title = "Vehicle Type Listing";
}

    <h2>Vehicle Type Listing</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { area = "" }, new { @class = "btn btn-primary" })
</p>
<table id="dataTable" class="table table-bordered" style="width:100%">
    <thead class="thead-dark">
    <tr>
        <th>
           ID
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            Create Date
        </th>
        <th>
            Edit Date
        </th>
        <th></th>
    </tr>
    </thead>

    <tbody>
@foreach (var item in Model) {
<tr class="clickable-row" data-href="/VehicleTypes/Details/@item.VehicleTypeId">
    <td>
        @Html.DisplayFor(modelItem => item.VehicleTypeId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CreateDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EditDate)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.VehicleTypeId }, new { @class = "btn btn-secondary" }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.VehicleTypeId }, new { @class = "btn btn-danger" })
    </td>
</tr>
}
</tbody>

</table>
