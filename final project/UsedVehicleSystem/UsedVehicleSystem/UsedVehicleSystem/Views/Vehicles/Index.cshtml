@model IEnumerable<UsedVehicleSystem.Models.Vehicle>

@{
    ViewBag.Title = "Vehicle Listing";
}

<h2>Vehicle Listing</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { area = "" }, new { @class = "btn btn-primary" })
</p>
<table id="dataTable" class="table table-bordered" style="width:100%">
    <thead class="thead-dark">
    <tr>
        <th>
            ID
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Make.Name)
        </th>
        <th>
            Model Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th>
            Sold Date
        </th>
        <th></th>
    </tr>
    </thead>

    <tbody>
@foreach (var item in Model) {
<tr class="clickable-row" data-href="/Vehicles/Details/@item.VehicleId">
    <td>
        @Html.DisplayFor(modelItem => item.VehicleId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Year)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Make.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.VehicleModel.ModelName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Cost)
    </td>
    <td>
        @if (item.SoldDate.HasValue)
        {
            @item.SoldDate.Value.ToString("yyyy-MM-dd")
        }

    </td>

    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.VehicleId }, new { @class = "btn btn-secondary" }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.VehicleId }, new { @class = "btn btn-danger" })
    </td>
</tr>
}
</tbody>

</table>
